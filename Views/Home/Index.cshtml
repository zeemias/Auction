<!-- Header -->
<header id="header">
    <div class="inner">
        <!-- Logo -->
        <a href="/Home/Index" class="logo">
            <img src="/Content/images/logo.png" alt="" />
        </a>
        <nav style="right: 120px; top: 50px; color: black;">Баланс: @ViewBag.Coints <span class="icon fa-btc"></span></nav>
        <!-- Nav -->
        <nav>
            <ul>
                <li><a href="#menu">Menu</a></li>
            </ul>
        </nav>
    </div>
</header>

<!-- Menu -->
<nav id="menu">
    <h2>Меню</h2>
    <ul>
        <li>Логин: @User.Identity.Name</li>
        <li>Баланс: @ViewBag.Coints <span class="icon fa-btc"></span></li>
        <li><a href="/Account/LogOff">Выйти</a></li>
    </ul>
</nav>

<!-- Main -->
<div id="main">
    <div class="inner">
        <header class="textcenter">
            <h1>Аукцион ДельтаКредит</h1>
            <h3>До конца аукциона осталось:</h3>
            <script src="http://megatimer.ru/s/39ac4279881defe5f43037c562db2f34.js"></script>
        </header>
        <section class="tiles">
            @foreach (var item in ViewBag.Items)
            {
                <article class="">
                    <span class="image">
                        <img src="@item.Image" alt="" />
                    </span>
                    <a href="/Home/Item/@item.Id">
                        <div class="content">
                            <h2>@item.Name</h2>
                            <span>Текущая ставка:</span>
                             @if (item.DefaultBet >= item.LastBet)
                             {
                                <br><span>@item.DefaultBet <span class="icon fa-btc"></span></span>
                             }
                             else
                             {
                                <br><span>@item.LastBet <span class="icon fa-btc"></span></span>
                             }
                            <br><span>Шаг ставки:</span>
                            <br><span>@item.Step <span class="icon fa-btc"></span></span>
                        </div>
                    </a>
                </article>
            }
        </section>
    </div>
</div>